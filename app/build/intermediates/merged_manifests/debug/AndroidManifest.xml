<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.htc.ciberrateestimator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity android:name="com.htc.ciberrateestimator.LoginActivity" />
        <activity android:name="com.htc.ciberrateestimator.BaseActivity" />
        <activity
            android:name="com.htc.ciberrateestimator.JobTitleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.htc.ciberrateestimator.JobLevelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.htc.ciberrateestimator.SelectAreaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.htc.ciberrateestimator.NumberOfResourcesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.htc.ciberrateestimator.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.htc.ciberrateestimator.MainActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:exported="false" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.htc.ciberrateestimator.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>